# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/restaurant_intel

# Application
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ML Services (set ML_ENABLED=true to activate)
ML_ENABLED=false
WEIGHTS_PATH=weights/dinov3_classifier.pt
MODEL_DEVICE=cpu

# Crop Service
CLASSIFIER_ENDPOINT=http://localhost:8000/ml/predict
CLASSIFIER_TIMEOUT_SECONDS=10
CAPTURE_INTERVAL_SECONDS=5
CROPS_BASE_DIR=./data/crops
CROP_SERVICE_STATE=data/crop_service_state.json
VIDEO_SOURCE_TIMEOUT_SECONDS=5
MAX_IN_FLIGHT_PER_CAMERA=32
DISPATCH_MAX_ATTEMPTS=3
DISPATCH_BACKOFF_SECONDS=0.5

# OpenRouter LLM Configuration
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=bytedance-seed/seed-1.6
